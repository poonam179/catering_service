<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/id_dashboard_First"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red">

        <ImageView
            android:id="@+id/toolbar_three_line"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            android:onClick="ClickMenu"
            android:visibility="gone"
            android:src="@drawable/baseline_dehaze_white_36" />

        <ImageView
            android:id="@+id/toolbar_back_arrow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:src="@drawable/ic_arrow_back" />

        <ImageView
            android:id="@+id/toolbar_gps"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="gone"
            android:src="@drawable/baseline_share_location_white_36" />



        <TextView
            android:id="@+id/lbl_cityname"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/toolbar_cart"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:src="@drawable/baseline_shopping_cart_white_36" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

</RelativeLayout>