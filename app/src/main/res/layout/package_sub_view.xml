<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/subpackage_one_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/txt_subpackage_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="WR-01"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="45px"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/subpackage_second_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/subpackage_one_relative_layout"
                android:background="@color/grey_light"
                android:layout_margin="@dimen/margin_5dp">
                <TextView
                    android:id="@+id/txt_subpackage_price"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="450"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/green"
                    android:textSize="25px"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:id="@+id/txt_subpackage_members"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@+id/txt_subpackage_price"
                    android:gravity="center"
                    android:text="450"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_500"
                    android:textSize="20px"
                    android:textStyle="bold"></TextView>

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/txt_subpackage_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/subpackage_second_relative_layout"
                android:background="@color/colorPrimary"
                >
                <TextView
                    android:id="@+id/txt_subpackage_btn_1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="select package"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="25px"
                    android:textStyle="bold"></TextView>

            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>